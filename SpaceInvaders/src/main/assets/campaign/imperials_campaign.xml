    </campaign>
    <campaign id="1">
        <name>rebels_campaign</name>
        <picture>graphics/sprites/planet_2.png</picture>
        <width>128</width>
        <height>128</height>
        <position>
            <x>300</x>
            <y>540</y>
        </position>
        <mission id="1">
            <name>Helper</name>
            <player_alliance>Mutants</player_alliance>
            <opponent_alliance>Rebels</opponent_alliance>
            <definition>
                <time_limit>200</time_limit>
                <type>win_with</type>
                <value>10</value>
            </definition>
        </mission>
