<campaigns
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="scheme/campaign_scheme_definition.xml">

    <background>graphics/images/background.png</background>
    <parallax_background>false</parallax_background>

    <campaign id="0">
        <name>imperials_campaign</name>
        <picture>graphics/sprites/planet_1.png</picture>
        <width>128</width>
        <height>128</height>
        <position>
            <x>960</x>
            <y>540</y>
        </position>
        <mission id="0">
            <name>Killer</name>
            <player_alliance>Mutants</player_alliance>
            <opponent_alliance>Rebels</opponent_alliance>
