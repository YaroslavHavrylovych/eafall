<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NoTitleBar.Fullscreen.NoBackground" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="SettingsTitle">
        <item name="android:textSize">@dimen/settings_volume_title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsCheckboxTitle">
        <item name="android:textColor">@color/settings_checkbox_title</item>
        <item name="android:textSize">@dimen/settings_volume_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="strokeColor">@color/settings_checkbox_title_shadow</item>
        <item name="strokeJoinStyle">miter</item>
        <item name="strokeWidth">2dp</item>
    </style>


    <style name="SettingsCheckboxDescription">
        <item name="android:textColor">@color/settings_checkbox_description</item>
        <item name="android:textSize">@dimen/settings_volume_description</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/settings_checkbox_description_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsDevModeCheckboxDescription">
        <item name="android:textColor">@color/settings_checkbox_description</item>
        <item name="android:textSize">@dimen/settings_volume_description</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsHealthBarText">
        <item name="android:textColor">@color/settings_health_bar_text</item>
        <item name="android:textSize">@dimen/settings_health_bar_behaviour_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/settings_health_bar_text_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
    </style>
</resources>
